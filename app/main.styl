$bodyBgColor = hsla(167,100%,46%, 1)
$mainBgColor = hsla(167,100%,35%, 1)

$quoteBorderColor = hsla(167,100%,30%,1)

#body
  background-color: $bodyBgColor
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  height: 100vh
//handheld
@media only screen and (min-width: 320px)
  #main
    background-color: $mainBgColor
    color: hsla(169,100%,20%,1)
    text-align: center
    font-family: Helvetica Neue, sans-serif
    padding: 10px
    max-width: 90%
    border-radius: 3px
    border: 2px solid $quoteBorderColor

@media only screen and (min-width: 600px)
  #main
    flex: none
    align-self: center
    max-width: 90%
    padding: 30px
